<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
      <%= form.fields_for :address do |address_fields| %>
      Street: <%= address_fields.text_field :street %>
      City: <%= address_fields.text_field :city %>
      State: <%= address_fields.select :state, options_for_states(@contact.address.state) %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field"> 
    <%= form.label :kind_id %> 
    <%= form.collection_select :kind_id, @chamaKind, :id, :description, prompt: '' %>
  </div>

  <div id='phones'>
      <%= form.fields_for :phones do |phone_fields| %>
        <%= render partial: "phone_fields", locals: {f: phone_fields}  %>
      <% end %>
  <div class="links">
     <%= link_to_add_association 'add phone', form, :phones %>
   </div>
 </div>

  <div class="field">
    <%= form.label :rmk %>
    <%= form.text_area :rmk %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
