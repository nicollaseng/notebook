<div class="form-style-10">
  <p id="notice"><%= notice %></p>
<div class="form-style-1">
  <h1>Contatos</h1>
</div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th><%=Contact.human_attribute_name("name")%></th>
        <th><%=Contact.human_attribute_name("kind")%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr style="background: <%= cycle('#ffff80', 'white')%>">
          <div>
          <td><%= link_to image_tag(contact.avatar.thumb_index.url, alt: 'Avatar'), contact_path(contact) %></td>
          </div>
          <td><%= contact.name %></td>
          <td><%= contact.kind.description %></td>
          <td><%= link_to 'Ver', contact_path(contact), class: "btn btn-success" %></td>
          <td><%= link_to t('buttons.destroy'), contact, class: "btn btn-danger", method: :delete, data: { confirm: t('confirmation.messages.sure') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= paginate @contacts %>
  <div class="btn btn-warning">
  <%= link_to t('buttons.new'), new_contact_path,  class: "btn" %>
</div>
 <div class="btn btn-warning">
  <%= link_to 'Home', root_path,  class: "btn" %>
</div>

</div>
