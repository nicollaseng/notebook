<div class="basic-grey">

  <p id="notice"><%= notice %></p>

<div class="titulo">
  <h1>Contatos</h1>
</div>

  <table>
    <thead>
      <tr>
        <th><%=Contact.human_attribute_name("name")%></th>
        <th><%=Contact.human_attribute_name("kind")%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr style="background: <%= cycle(' #33ffad', '#ffffe6')%>">
          <td><%= contact.name %></td>
          <td><%= contact.kind.description %></td>
          <td><%= link_to t('buttons.edit'), edit_contact_path(contact), class: "btn btn-warning" %></td>
          <td><%= link_to t('buttons.destroy'), contact, class: "btn btn-danger", method: :delete, data: { confirm: t('confirmation.messages.sure') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= paginate @contacts %>
  <div class="btn btn-warning">
  <%= link_to t('buttons.new'), new_contact_path,  class: "btn" %>
</div>

</div>
