<div class="tile">
  <div class="tile-header">
    <h2 style="color: white; opacity: .75; font-size: 4rem; display: flex; justify-content: center; align-items: center; height: 100%;">ENTRE</h2>
  </div>
  
  <div class="tile-body">
    <%= form_for(resource, id: "form", as: resource_name, url: session_path(resource_name)) do |f| %>
      <label class="form-input">
        <i class="material-icons">person</i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
        <span class="label">Email</span>
        <span class="underline"></span>
      </label>
     
      
      <label class="form-input">
        <i class="material-icons">lock</i>
        <%= f.password_field :password, autocomplete: "off" %>
        <span class="label">Password</span>
        <div class="underline"></div>
      </label>
      <%= render "devise/shared/links" %>
      
      <div class="submit-container clearfix" style="margin-top: 2rem;">
        <%= f.submit "Entrar", class:"btn btn-irenic float-right" %>          
      </div>
        
        <div class="login-pending">
          <div class=spinner>
            <span class="dot1"></span>
            <span class="dot2"></span>
          </div>
          
          <div class="login-granted-content">
            <i class="material-icons">done</i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
  
 
