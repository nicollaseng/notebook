<p id="notice"><%= notice %></p>

<h1>Kinds</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.show'),kind %></td>
        <td><%= link_to t('buttons.edit'),edit_kind_path(kind) %></td>
        <td><%= link_to t('buttons.destroy'),kind, method: :delete, data: { confirm: t('confirmation.messages.sure')  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

